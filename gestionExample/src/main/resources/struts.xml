<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">


<struts>
	<constant name="struts.devMode" value="true"></constant>
	<constant name="struts.custom.i18n.resources" value="global"></constant>

	<package name="default" extends="struts-default">


		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="login" class="fr.formation.inti.action.Login" method="execute">
			<result name="success">/helloStruts.jsp</result>
			<result name="input">/login.jsp</result>
		</action>

		<action name="locale1" class="fr.formation.inti.action.Locale" method="execute1">
			<result name="success">/login.jsp</result>
		</action>
		
		<action name="locale2" class="fr.formation.inti.action.Locale" method="execute2">
			<result name="success">/helloStruts.jsp</result>
		</action>


	</package>
</struts>      